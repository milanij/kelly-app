<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img
        height="200"
        witdth="200"
        src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/17/Yin_yang.svg/2000px-Yin_yang.svg.png">
    </div>
    <div class="col-md-8 pull-left">
      <h1>The Tao of Comedy</h1>
      <h2>Hosted by:</h2>
      <h2>Kelly MacLean</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <ul class="list-group">
        <li class="list-group-item"><%= link_to "May 2016" %></li>
        <li class="list-group-item"><%= link_to "April 2016" %></li>
      </ul>
    </div>
    <div class="col-md-10">
      <ul class="list-group">
        <% @podcasts.each do |podcast| %>
          <% if podcast.visible? %>
            <li class="list-group-item">
              <h3><%= link_to(
                      podcast.title,
                      podcast_path( podcast.id ),
                      class: "podcast-index-link",
                      data: {
                        podcast_title: podcast.title
                      }
                  ) %>
              </h3>
              <span class="release-date">
                Release Date: <%= podcast.release_date.strftime( "%m/%d/%y" ) %>
              </span>
              <br>
              <span class="podcast-description">
                <%= podcast.description %>
              </span>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
