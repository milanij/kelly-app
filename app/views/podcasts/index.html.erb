<div class="container">
  <div class="row">
    <div class="col-md-12 pull-left">
      <h1 class="text-center">The Tao of Comedy</h1>
      <h2>Hosted by:</h2>
      <h2>Kelly MacLean</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% @podcasts.each do |podcast| %>
        <% if podcast.visible? %>
          <h3><%= link_to podcast.title, podcast_path( podcast.id ) %></h3>
          <span class="release-date">
            Release Date: <%= podcast.release_date.strftime( "%m/%d/%y" ) %>
          </span>
          <br>
          <span class="podcast-description">
            <%= podcast.description %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
