<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>The Tao of Comedy</h1>
      <h2>Hosted by:</h2>
      <h2>Kelly MacLean</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% @podcasts.each do |podcast| %>
        <h3><%= link_to podcast.title, podcast_path( podcast.id ) %></h3>
        <br>
        <p><%= podcast.description %></p>
        <br>
        <p><%= podcast.date %></p>
      <% end %>
    </div>
  </div>
</div>
