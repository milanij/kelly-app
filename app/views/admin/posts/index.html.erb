<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Posts:</h3>
    </div>
    <div class="col-md-12">
      <% @posts.each do |post| %>
        <div class="admin-post">
          <h2><%= link_to post.title, edit_admin_post_path( post.id ) %></h2>
          <p><%= post.body %></p>
          <p>
            Is this post visible to the public?
            <br>
            <%= post.visible? ? "YES" : "NO" %>
          </p>
          <br>
        </div>
      <% end %>
    </div>
  </div>
</div>
