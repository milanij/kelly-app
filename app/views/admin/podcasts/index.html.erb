<div class="container">
  <div class="row admin-podcasts-content-row">
    <div class="col-md-8-offset">
      <span class="admin-title">
        Podcasts:
      </span>
    </div>
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Release Date</th>
            <th>Description</th>
            <th>Visible?</th>
          </tr>
        </thead>
        <tbody>
          <% @podcasts.each do |podcast| %>
            <tr>
              <td>
                <%= podcast.id %>
              </td>
              <td>
                <%= link_to(
                    podcast.title,
                    edit_admin_podcast_path( podcast.id )
                ) %>
              </td>
              <td>
                <%= podcast.release_date.strftime( "%m/%d/%y" ) %>
              </td>
              <td>
                <%= podcast.description %>
              </td>
              <td>
                <%= nice_boolean( podcast.visible? ) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
