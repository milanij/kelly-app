<% if user_signed_in? && current_user.admin? %>
  <div id="navbar">
    <div class="navbar admin-navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <ul class="nav navbar-nav pull-left">
            <li><%= link_to "Podcasts", admin_podcasts_path %></li>
            <li><%= link_to "Posts", admin_posts_path %></li>
            <li><%= link_to "Create a Podcast", new_admin_podcast_path %></li>
            <li><%= link_to "Create a Post", new_admin_post_path %></li>
            <% if post? %>
              <li><%= link_to "Edit Post", edit_admin_post_path( @post ) %></li>
            <% end %>
            <% if podcast? %>
              <li><%= link_to "Edit Podcast", edit_admin_podcast_path( @podcast ) %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu pull-right" role="menu">
                <li>
                  <%= link_to "Admin", admin_podcasts_path %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to(
                    "Sign Out",
                    destroy_user_session_path,
                    method: "delete"
                      )
                  %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
<% end %>
